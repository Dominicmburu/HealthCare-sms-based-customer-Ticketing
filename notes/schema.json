{
    "Patients": {
      "patient_id": {
        "type": "INT",
        "primary_key": true,
        "auto_increment": true
      },
      "name": {
        "type": "VARCHAR",
        "length": 100,
        "nullable": false
      },
      "contact_number": {
        "type": "VARCHAR",
        "length": 15,
        "nullable": false
      },
      "email": {
        "type": "VARCHAR",
        "length": 100,
        "nullable": false,
        "unique": true
      },
      "preferred_contact_method": {
        "type": "ENUM",
        "values": ["SMS", "Email"],
        "nullable": false
      }
    },
    
    "Tickets": {
      "ticket_id": {
        "type": "INT",
        "primary_key": true,
        "auto_increment": true
      },
      "patient_id": {
        "type": "INT",
        "foreign_key": "Patients.patient_id",
        "nullable": false
      },
      "created_at": {
        "type": "DATETIME",
        "nullable": false
      },
      "updated_at": {
        "type": "DATETIME",
        "nullable": false
      },
      "status": {
        "type": "ENUM",
        "values": ["New", "In Progress", "Resolved", "Closed"],
        "nullable": false
      },
      "priority": {
        "type": "ENUM",
        "values": ["Low", "Medium", "High"],
        "nullable": false
      },
      "channel": {
        "type": "ENUM",
        "values": ["SMS", "Email", "Online Form"],
        "nullable": false
      },
      "description": {
        "type": "TEXT",
        "nullable": true
      }
    },
    
    "Staff": {
      "staff_id": {
        "type": "INT",
        "primary_key": true,
        "auto_increment": true
      },
      "name": {
        "type": "VARCHAR",
        "length": 100,
        "nullable": false
      },
      "role": {
        "type": "ENUM",
        "values": ["Support Staff", "Medical Staff", "Administrator"],
        "nullable": false
      },
      "email": {
        "type": "VARCHAR",
        "length": 100,
        "nullable": false,
        "unique": true
      },
      "phone_number": {
        "type": "VARCHAR",
        "length": 15,
        "nullable": true
      }
    },
    
    "Ticket_Responses": {
      "response_id": {
        "type": "INT",
        "primary_key": true,
        "auto_increment": true
      },
      "ticket_id": {
        "type": "INT",
        "foreign_key": "Tickets.ticket_id",
        "nullable": false
      },
      "staff_id": {
        "type": "INT",
        "foreign_key": "Staff.staff_id",
        "nullable": false
      },
      "response_text": {
        "type": "TEXT",
        "nullable": false
      },
      "timestamp": {
        "type": "DATETIME",
        "nullable": false
      },
      "response_type": {
        "type": "ENUM",
        "values": ["Patient Update", "Internal Note"],
        "nullable": false
      }
    },
    
    "Notifications": {
      "notification_id": {
        "type": "INT",
        "primary_key": true,
        "auto_increment": true
      },
      "ticket_id": {
        "type": "INT",
        "foreign_key": "Tickets.ticket_id",
        "nullable": false
      },
      "sent_to": {
        "type": "VARCHAR",
        "length": 100,
        "nullable": false
      },
      "notification_type": {
        "type": "ENUM",
        "values": ["SMS", "Email"],
        "nullable": false
      },
      "message": {
        "type": "TEXT",
        "nullable": false
      },
      "timestamp": {
        "type": "DATETIME",
        "nullable": false
      }
    },
    
    "User_Roles": {
      "role_id": {
        "type": "INT",
        "primary_key": true,
        "auto_increment": true
      },
      "role_name": {
        "type": "VARCHAR",
        "length": 50,
        "nullable": false
      },
      "permissions": {
        "type": "TEXT",
        "nullable": false
      }
    }
  }
  